@page
@model TestApp2.Pages.NewLinkModel

@{
    ViewData["Title"] = "NewLink";
}

<h1>Новая ссылка</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LinkEntity.Url" class="control-label"></label>
                <input asp-for="LinkEntity.Url" class="form-control" />
                <span asp-validation-for="LinkEntity.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="MyLinks">К списку коротких ссылок</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
