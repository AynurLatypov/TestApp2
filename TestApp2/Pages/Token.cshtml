@page
@model TestApp2.Pages.TokenModel

@{
    ViewData["Title"] = "Token";
}

<h1>Token</h1>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <input type="submit" value="Создать токен" class="btn btn-primary" />
            </div>
        </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApiTokenEntity[0].ApiToken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiTokenEntity[0].ExpiresAt)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ApiTokenEntity) {
            var style = item.ExpiresAt < DateTime.UtcNow ? "text-decoration: line-through" : "";
            <tr style="@style">
                <td>
                @Html.DisplayFor(modelItem => item.ApiToken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiresAt)
            </td>
        </tr>
}
    </tbody>
</table>
